        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0">这是主页面，所有东西从这里设计</TextBlock>
        <control:PlayerControl Grid.Row="1" Grid.Column="0"/>

    </Grid>
